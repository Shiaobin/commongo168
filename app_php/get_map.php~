<?php
require_once("DBconfig.php");
require_once("DB_Class.php");
$db = new DB();
$db->connect_db($_DB['host'], $_DB['username'], $_DB['password'], $_DB['dbname']);

$sql="select * from maplist where Online=1";
$db->query($sql);
$i=0;
$flag=false;
while($result=$db->fetch_array()){
	$maplist[$i]["mapLat"]=$result["mapLat"];
	$maplist[$i]["mapLng"]=$result["mapLng"];
	$maplist[$i]["mapId"]=$result["mapId"];
	$maplist[$i]["mapName"]=$result["mapName"];
	$maplist[$i]["mapAddr"]=$result["mapAddr"];
	$i++;
	$flag=true;
}
if($flag){
	$response["maplist"]=$maplist;
	$response["success"] = 1; 
}else{
	$response["success"] = 0; 
	$response["message"] = "No maplist found";
}
echo json_encode($response);
$db->close();
?>