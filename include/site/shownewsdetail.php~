      </tr>
      <!-------------------------------------------------------------->
      <tr align="center">
        <td colspan="2" width="100"><font color=#448697>來源：<?php echo $row_newsRec["Source"];?> | 日期：<?php echo date('Y-m-d',strtotime($row_newsRec["PubDate"]));?> | 瀏覽次數：<?php echo $row_newsRec["cktimes"];?></font></td>
      </tr>
      <tr align="center">
