<?php require_once('../../connections/webshop.php'); ?>
<?php require('../../include/system.php'); ?>
<?php  //------------------------------取得最新消息內容--------------------------------//
$currentPage = $_SERVER["PHP_SELF"];

$colname_NewsRec = "-1";
if (isset($_GET['NewsID'])) {
  $colname_NewsRec = $_GET['NewsID'];
}

mysql_select_db($database_webshop, $webshop);
$query_NewsRec = sprintf("SELECT * FROM news where NewsID=%s",GetSQLValueString($_GET['NewsID'], "int"));
$newsRec = mysql_query($query_NewsRec, $webshop) or die(mysql_error());
$row_newsRec = mysql_fetch_assoc($newsRec);
$totalRows_newsRec = mysql_num_rows($newsRec);
?>
<?php //-------------------------------更新人氣值------------------------------------//
if (isset($_GET["NewsID"])) {	
  $updateSQL = sprintf("UPDATE news SET cktimes=cktimes+1 where NewsID=%s", 
					    GetSQLValueString($_GET['NewsID'], "int"));

  mysql_select_db($database_webshop, $webshop);
  $Result = mysql_query($updateSQL, $webshop) or die(mysql_error());
}
?>
